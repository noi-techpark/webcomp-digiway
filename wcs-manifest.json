  "image": "wcs-logo.png",
  "searchTags": ["map"],
  "dist": {
    "basePath": "dist",
    "files": ["map_widget.min.js"]
  },
  "configuration": {
    "tagName": "map-widget",
    "options": [
      {
        "key": "source",
        "type": "multiselect",
        "label": "Select which dataset to display",
        "required": false,
        "options": {
          "values": [
            "civis.geoserver.hikingtrails",
            "civis.geoserver.mountainbikeroutes",
            "civis.geoserver.intermunicipalcyclingroutes",
            "civis.geoserver.cyclewaystyrol",
            "dservices3.arcgis.com.radrouten_tirol",
            "dservices3.arcgis.com.hikintrail_e5"
          ],
          "default": "civis.geoserver.intermunicipalcyclingroutes"
        }
      },
      {
        "key": "pagesize",
        "type": "number",
        "label": "Indicates how many elements should be loaded",
        "required": false,
        "options": {
          "default": 500
        }
      },
      {
        "key": "language",
        "type": "select",
        "label": "Two letter key for the language to be used, if omitted the widget will use the lang attribute of the closest parent element. Fallback and Default is `en`",
        "required": false,
        "options": {
          "values": ["de", "it", "en"],
          "default": "de"
        }
      },
      {
        "key": "centermap",
        "type": "text",
        "label": "centermap: ex. 46.7728692,10.7916716,14",
        "required": false,
        "options": {
          "default": ""
        }
      }
    ]
  }
}
