    ]
  },
  "configuration": {
    "tagName": "map-widget",
    "options": [
      {
        "key": "source",
        "type": "select",
        "label": "Select which data to display",
        "required": false,
        "options": {
          "values": [
            "civis.geoserver.hikingtrails",
            "civis.geoserver.mountainbikeroutes",
            "civis.geoserver.intermunicipalcyclingroutes",
            "civis.geoserver.cyclewaystyrol"
          ],
          "default": "civis.geoserver.intermunicipalcyclingroutes"
        }
      },
      {
        "key": "language",
        "type": "select",
        "label": "Two letter key for the language to be used, if omitted the widget will use the lang attribute of the closest parent element. Fallback and Default is `en`",
        "required": false,
        "options": {
          "values": [
            "de",
            "it",
            "en"
          ],
          "default": "en"
        }
      },     
      {
        "key": "centermap",
        "type": "text",
        "label": "centermap: ex. 46.7728692,10.7916716,14",
        "required": false,
        "options": {
          "default": ""
        }
      }     
    ]
  }
